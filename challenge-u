    <div class="container">
        <h1>ğŸ¤ª è‡ªåŠ¨æŠ¬æ å°æ¸¸æˆ</h1>
        <!-- è§‚ç‚¹è¾“å…¥æ¡† -->
        <textarea id="ideaInput" placeholder="è¯·è¾“å…¥ä½ çš„è§‚ç‚¹ï¼Œæˆ‘æ¥æŠ¬æ ï½
ä¾‹ï¼šå–å¥¶èŒ¶ä¼šèƒ–ã€åŠªåŠ›å°±èƒ½æˆåŠŸã€ç¨‹åºå‘˜éƒ½å®…"></textarea>
        <!-- æäº¤æŒ‰é’® -->
        <button id="submitBtn">å¼€å§‹æŠ¬æ ï¼</button>
        <!-- æŠ¬æ ç»“æœå±•ç¤º -->
        <div class="result-box" id="resultBox">
            <h3>ğŸ’¥ æ ç²¾ä¸Šçº¿ï¼š</h3>
            <p id="taigangResult"></p>
        </div>
        <!-- é‡ç½®æŒ‰é’® -->
        <button id="resetBtn">é‡æ–°è¾“å…¥</button>
    </div>

    <script>
        // è·å–é¡µé¢å…ƒç´ 
        const ideaInput = document.getElementById('ideaInput');
        const submitBtn = document.getElementById('submitBtn');
        const resultBox = document.getElementById('resultBox');
        const taigangResult = document.getElementById('taigangResult');
        const resetBtn = document.getElementById('resetBtn');

        // æ ¸å¿ƒï¼š5ç§æŠ¬æ è§’åº¦çš„æ¨¡æ¿ï¼ˆè¦†ç›–ä¸»æµé€»è¾‘æ¼æ´ï¼‰
        const taigangTemplates = [
            // 1. è´¨ç–‘å‰æ
            "ä½ è¯´çš„ã€Œ{}ã€ï¼Œé»˜è®¤çš„å‰ææ˜¯ä»€ä¹ˆï¼Ÿè¿™ä¸ªå‰æçœŸçš„æˆç«‹å—ï¼Ÿæœ‰ä¾æ®å—ï¼Ÿ",
            // 2. æ¨¡ç³Šå®šä¹‰
            "ä½ æåˆ°çš„ã€Œ{}ã€é‡Œï¼Œâ€˜{}â€™è¿™ä¸ªå…³é”®è¯åˆ°åº•æ€ä¹ˆå®šä¹‰ï¼Ÿæ²¡æœ‰æ˜ç¡®æ ‡å‡†å¯æ²¡æ³•èŠå“¦ï½",
            // 3. ä»¥åæ¦‚å…¨
            "ä½ æ˜¯ä»ä¸ªåˆ«æ¡ˆä¾‹æ¨å‡ºã€Œ{}ã€è¿™ä¸ªç»“è®ºçš„å—ï¼Ÿæœ‰æ²¡æœ‰åä¾‹èƒ½æ¨ç¿»è¿™ä¸ªè§‚ç‚¹ï¼Ÿ",
            // 4. å› æœæ··æ·†
            "ã€Œ{}ã€çœŸçš„æ˜¯å› æœå…³ç³»å—ï¼Ÿä¼šä¸ä¼šæ˜¯ç›¸å…³å…³ç³»ï¼Œæˆ–è€…åè¿‡æ¥çš„å› æœï¼Ÿ",
            // 5. æç«¯å‡è®¾
            "å¦‚æœæŠŠã€Œ{}ã€æ¨åˆ°æç«¯æƒ…å†µï¼Œæ¯”å¦‚{}ï¼Œè¿™ä¸ªè§‚ç‚¹è¿˜æˆç«‹å—ï¼Ÿ"
        ];

        // æå–è§‚ç‚¹æ ¸å¿ƒå…³é”®è¯ï¼ˆç®€åŒ–ç‰ˆï¼Œé€‚é…æ–°æ‰‹ï¼‰
        function getKeyword(idea) {
            // å»æ‰å¤šä½™ç©ºæ ¼ï¼Œå–å‰10ä¸ªå­—ä½œä¸ºæ ¸å¿ƒï¼ˆæ‰‹æœºç«¯æ˜¾ç¤ºå‹å¥½ï¼‰
            return idea.trim().replace(/\s+/g, '').substring(0, 10);
        }

        // ç”Ÿæˆæç«¯å‡è®¾çš„è¡¥å……ï¼ˆè®©æŠ¬æ æ›´åˆé’»ï¼‰
        function getExtremeCase(idea) {
            const cases = [
                "å®Œå…¨ä¸è€ƒè™‘æˆæœ¬çš„æƒ…å†µä¸‹",
                "æ‰€æœ‰äººéƒ½è¿™ä¹ˆåšçš„è¯",
                "é‡åˆ°çªå‘æ„å¤–æ—¶",
                "åªçœ‹çŸ­æœŸ/é•¿æœŸæ•ˆæœæ—¶"
            ];
            return cases[Math.floor(Math.random() * cases.length)];
        }

        // æ ¸å¿ƒæŠ¬æ é€»è¾‘ï¼šåŒ¹é…æ¨¡æ¿+æ›¿æ¢å…³é”®è¯
        function generateTaigang(idea) {
            if (!idea.trim()) return "ä½ è¿˜æ²¡è¾“å…¥è§‚ç‚¹å‘¢ï¼Œæƒ³è®©æˆ‘æ ç©ºæ°”ï¼ŸğŸ˜œ";
            
            const keyword = getKeyword(idea);
            // éšæœºé€‰ä¸€ä¸ªæŠ¬æ æ¨¡æ¿
            const randomIdx = Math.floor(Math.random() * taigangTemplates.length);
            let template = taigangTemplates[randomIdx];
            
            // é’ˆå¯¹ä¸åŒæ¨¡æ¿åšä¸ªæ€§åŒ–æ›¿æ¢
            switch(randomIdx) {
                case 1: // æ¨¡ç³Šå®šä¹‰ï¼šæ›¿æ¢ä¸¤ä¸ª{}
                    template = template.replace(/\{\}/g, keyword);
                    break;
                case 4: // æç«¯å‡è®¾ï¼šç¬¬äºŒä¸ª{}æ›¿æ¢æˆæç«¯æ¡ˆä¾‹
                    template = template.replace("{}", idea).replace("{}", getExtremeCase(idea));
                    break;
                default: // å…¶ä»–æ¨¡æ¿ï¼šæ›¿æ¢ä¸€ä¸ª{}
                    template = template.replace("{}", idea);
            }
            return template;
        }

        // æäº¤æŒ‰é’®ç‚¹å‡»äº‹ä»¶
        submitBtn.addEventListener('click', function() {
            const idea = ideaInput.value;
            // ç”ŸæˆæŠ¬æ ç»“æœ
            const result = generateTaigang(idea);
            // æ˜¾ç¤ºç»“æœ
            taigangResult.textContent = result;
            resultBox.style.display = 'block';
            resetBtn.style.display = 'block';
            // æ‰‹æœºç«¯è‡ªåŠ¨æ»šåŠ¨åˆ°ç»“æœåŒº
            resultBox.scrollIntoView({ behavior: 'smooth' });
        });

        // é‡ç½®æŒ‰é’®ç‚¹å‡»äº‹ä»¶
        resetBtn.addEventListener('click', function() {
            ideaInput.value = '';
            resultBox.style.display = 'none';
            resetBtn.style.display = 'none';
            ideaInput.focus(); // èšç„¦è¾“å…¥æ¡†ï¼Œæ–¹ä¾¿å†æ¬¡è¾“å…¥
        });

        // é€‚é…æ‰‹æœºç«¯å›è½¦æäº¤ï¼ˆå¢å¼ºä½“éªŒï¼‰
        ideaInput.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && e.ctrlKey) { // æ‰‹æœºç«¯Ctrl+Enteræäº¤
                submitBtn.click();
            }
        });
    </script>
